<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/clothing_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/wintercoat" />

    <TextView
        android:id="@+id/clothing_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Coat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/clothing_icon"
        app:layout_constraintStart_toStartOf="@+id/clothing_icon"
        app:layout_constraintTop_toBottomOf="@+id/clothing_icon" />
</android.support.constraint.ConstraintLayout>